<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}">
                        <Grid x:Name="PART_ViewHost" Background="{DynamicResource MainBackgourndBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid x:Name="ThemeModifierImagePath" Tag="{DynamicResource DKGThemeModifierPath}" Visibility="Collapsed"/>

                            <TextBlock Name="ColourPathModifier" Tag="{Binding ActiveFilterPreset}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                    <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                    <Binding Source="/FilterPresets/PlatformColours/"/>
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source=".png"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border x:Name="MicroTrailerMask" Width="300" Height="300" Background="Black" Margin="-500,-500,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                            <!--COLOUR BACKGROUNDS-->
                            <Grid Grid.RowSpan="3">
                                <Border Name="ColourModifierBackground" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Border.Background>
                                        <ImageBrush Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                    </Border.Background>
                                </Border>
                                <Border Background="Black" Opacity="0.25"/>
                                <Border Background="{DynamicResource MainColourOverlay}" />
                            </Grid>

                            <!--PLATFORM BACKGROUNDS-->
                            <Grid Grid.RowSpan="3" Tag="{DynamicResource PlatformImageBackgrounds}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <TextBlock Name="BackgroundPathModifier" Tag="{Binding ActiveFilterPreset}" Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                        <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                        <Binding Source="/FilterPresets/PlatformBackgrounds/"/>
                                                        <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                        <Binding Source=".jpg"/>
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image Stretch="UniformToFill" RenderOptions.BitmapScalingMode="Fant" Source="{Binding ElementName=BackgroundPathModifier, Path=Text}"/>
                                <Border Background="{DynamicResource MainColourOverlay}" />
                            </Grid>
                            
                            <FadeImage x:Name="PART_ImageBackground" Grid.RowSpan="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                            <!--Overlay-->
                            <StackPanel HorizontalAlignment="Stretch" Grid.RowSpan="4" VerticalAlignment="Stretch">
                                <StackPanel.Style>
                                    <Style>
                                        <Setter Property="Control.Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                <Setter Property="Control.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Border Background="{DynamicResource OverlayFilterPresets}" Opacity="1" HorizontalAlignment="Stretch" Height="{StaticResource DesignHeight}"/>
                            </StackPanel>

                            <!--VIDEO BACKGROUND-->
                            <Grid Grid.Row="0" Grid.RowSpan="4" Opacity="1" Tag="{DynamicResource VideoBackgrounds}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                
                                <Grid x:Name="VideoBackgrounds" Tag="{DynamicResource VideoBackgrounds}" Style="{DynamicResource VideoBackground}">
                                    <TextBlock Name="VideoPath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source="\ExtraMetadata\games\"/>
                                                            <Binding Path="SelectedGame.Id"/>
                                                            <Binding Source="\VideoMicroTrailer.mp4" />
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSourceBackgrounds" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}" Stretch="UniformToFill" HorizontalAlignment="Center">
                                        <MediaElement.Style>
                                            <Style TargetType="MediaElement">
                                                <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPath, Path=Text}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=VideoBackgrounds, Path=Visibility}" Value="Collapsed">
                                                        <Setter Property="MediaElement.Source" Value=""/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MediaElement.Style>
                                    </MediaElement>                                    
                                </Grid>
                                <Border Background="{DynamicResource OverlayBrush}" Opacity="0.3"/>
                            </Grid>

                            <Grid Grid.Row="0" Background="Transparent"
                                  Height="120">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>

                                <ContentControl x:Name="PART_ElemBatteryStatus" Focusable="False" FontSize="42"
                                            VerticalAlignment="Center" Margin="10,0,10,0"
                                            Grid.Column="2">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Critical">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCritical}" />
                                                    <Setter Property="Foreground" Value="Red" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Low">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusLow}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Medium">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusMedium}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="High">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusHigh}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.IsCharging}" Value="True">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCharging}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>

                                <TextBlock x:Name="PART_TextBatteryPercentage" Style="{DynamicResource TextBlockBaseStyle}"
                                       VerticalAlignment="Center" Margin="0,0,20,0"
                                       Grid.Column="3"/>

                                <TextBlock x:Name="PART_TextClock" Style="{DynamicResource TextBlockBaseStyle}" Tag="{DynamicResource DropShadows}"
                                       VerticalAlignment="Center" Margin="20,0,0,0"
                                       Grid.Column="4"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0">
                                    <Grid.Style>
                                        <Style>
                                            <Setter Property="ItemsControl.Width" Value="80"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFilters, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFiltersAdditional, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ContentFilterItems, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresetsSideBar, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:0.3" From="80" To="300"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:0.3" From="300" To="80"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                </Grid>

                                <!--MAIN DOCK-->
                                <DockPanel Grid.Column="1" HorizontalAlignment="Left">
                                    <Filters x:Name="PART_ElemFilters"
                                         DockPanel.Dock="Left" Focusable="False"/>

                                    <FiltersAdditional x:Name="PART_ElemFiltersAdditional"
                                                   DockPanel.Dock="Left" Focusable="False"/>

                                    <ContentControl x:Name="PART_ContentFilterItems"
                                            DockPanel.Dock="Left" Focusable="False"/>

                                    <!--SIDE BAR VERTICAL-->
                                    <Grid Style="{DynamicResource SideBarStyle}" Tag="{DynamicResource SideBar}" DockPanel.Dock="Left">
                                        <Grid x:Name="GameDetails">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Width" Value="350"/>
                                                    <Style.Triggers>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Grid Tag="{DynamicResource MainBackgroundColor}" Style="{DynamicResource ColourModifier}" Grid.Column="0" Grid.ColumnSpan="9">
                                                <Border Background="{DynamicResource MainBackgourndBrush}" CornerRadius="10"/>
                                                <Border Name="ColourModifier1" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                    <Border.Background>
                                                        <ImageBrush Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                                    </Border.Background>
                                                </Border>
                                                <Border BorderBrush="White" BorderThickness="1.5" CornerRadius="10" Opacity="0.3"/>
                                            </Grid>

                                            <StackPanel Margin="15,20,0,0" Tag="{DynamicResource DropShadows}">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect BlurRadius="5" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>

                                                <!--PLATFORM LOGOS-->
                                                <TextBlock Name="PlatformLogoPathModifier" Tag="{Binding SelectedGame.Platforms[0]}" Visibility="Collapsed">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text">
                                                                <Setter.Value>
                                                                    <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                        <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                                        <Binding Source="/FilterPresets/PlatformLogos/"/>
                                                                        <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                        <Binding Source=".png"/>
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <Image HorizontalAlignment="Center" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Width="320" MaxHeight="150" Margin="0,10,15,30"
                                                       Source="{Binding ElementName=PlatformLogoPathModifier, Path=Text}"/>
                                                
                                                <Grid Tag="{DynamicResource MainScreenLogo}" Style="{DynamicResource MainScreenTitleStyle1}" DockPanel.Dock="Top">
                                                    <TextBlock HorizontalAlignment="Left" Style="{DynamicResource TextBlockBaseStyle}"
                                                           Text="{Binding SelectedGame.DisplayName}"
                                                           FontWeight="Bold"
                                                           TextWrapping="WrapWithOverflow" 
                                                           FontSize="42" Margin="0,0,10,10">
                                                    </TextBlock>
                                                </Grid>

                                                <Grid Tag="{DynamicResource MainScreenLogo}" Style="{DynamicResource MainScreenLogoStyle}" Margin="0,0,0,0" DockPanel.Dock="Top">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="130">
                                                        <!--Extra Metadata Tools Logo-->
                                                        <StackPanel Name="Icon1" Orientation="Vertical">
                                                            <TextBlock Name="LogoPath1" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text">
                                                                            <Setter.Value>
                                                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                                    <Binding Source="\ExtraMetadata\games\"/>
                                                                                    <Binding Path="SelectedGame.Id"/>
                                                                                    <Binding Source="\logo.png" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <StackPanel HorizontalAlignment="Left">
                                                                <FadeImage Name="LogoImage1" Grid.ZIndex="1" Width="320" MaxHeight="120" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" 
                                                                           VerticalAlignment="Top" HorizontalAlignment="Stretch" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                                                    <FadeImage.Style>
                                                                        <Style TargetType="FadeImage">
                                                                            <Setter Property="Source" Value="{Binding ElementName=LogoPath1, Path=Text}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="">
                                                                                    <Setter Property="Source" Value="{Binding ElementName=LogoPath1, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </FadeImage.Style>
                                                                </FadeImage>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>


                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Grid Margin="0,0,0,0" Width="320">
                                                            <StackPanel>
                                                                <Line HorizontalAlignment="Center" Stroke="#FFEBEBEB" StrokeThickness="2" X1="320" Margin="0,10,0,10" Opacity="0.3"/>

                                                                <!--SIDE BAR GAME INFO-->
                                                                <Grid>
                                                                    <Border Background="{DynamicResource MainBackgourndBrush}" CornerRadius="10"/>
                                                                    <Border Name="ColourModifier2" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <Border.Background>
                                                                            <ImageBrush Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                                                        </Border.Background>
                                                                    </Border>
                                                                    <Grid  Margin="10">
                                                                        <StackPanel Orientation="Horizontal" Width="300">
                                                                            <StackPanel>
                                                                                <StackPanel Margin="0,0,0,20">
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                                               Text="{DynamicResource LOCTimePlayed}"
                                                                                               Margin="0,0,0,5" />
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" 
                                                                                               Text="{Binding SelectedGame.Playtime, Converter={StaticResource PlayTimeToStringConverter}}" />
                                                                                </StackPanel>

                                                                                <StackPanel Margin="0,0,0,0" >
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                                               Text="{DynamicResource LOCPlatformTitle}"
                                                                                               Margin="0,0,0,5" />
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" 
                                                                                               Text="{Binding SelectedGame.Platforms[0]}" 
                                                                                               TextWrapping="WrapWithOverflow" Width="150" />
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                                                                            <StackPanel>
                                                                                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Right">
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                                               Text="{DynamicResource LOCGameLastActivityTitle}"
                                                                                               Margin="0,0,0,5" HorizontalAlignment="Right"/>
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" 
                                                                                               Text="{Binding SelectedGame.LastActivity, Converter={StaticResource DateTimeToLastPlayedConverter}}" 
                                                                                               HorizontalAlignment="Right" />
                                                                                </StackPanel>

                                                                                <StackPanel Margin="0,0,0,0" HorizontalAlignment="Right">
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                                               Text="{DynamicResource LOCGameReleaseDateTitle}"
                                                                                               Margin="0,0,0,5" HorizontalAlignment="Right"/>
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" 
                                                                                               Text="{Binding SelectedGame.ReleaseDate}" HorizontalAlignment="Right" />
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Grid>
                                                                
                                                                <!--SIDE BAR SUCCESSSTORY-->
                                                                <Grid Height="10"/>
                                                                <Grid>
                                                                    <Border Background="{DynamicResource MainBackgourndBrush}" CornerRadius="10"/>
                                                                    <Border Name="ColourModifier3" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <Border.Background>
                                                                            <ImageBrush Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                                                        </Border.Background>
                                                                    </Border>
                                                                    <Grid x:Name="GRIDSuccessStory" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="{PluginSettings Plugin=SuccessStory, Path=HasData}" Margin="10">
                                                                        <Grid.Style>
                                                                            <Style>
                                                                                <Setter Property="Control.Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                                                        <Setter Property="Control.Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Grid.Style>
                                                                        <Grid Width="300">
                                                                            <StackPanel Margin="0,0,0,0">
                                                                                <TextBlock Style="{DynamicResource ProgressLabel}" Foreground="#FFEBEBEB">
                                                                                </TextBlock>
                                                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" >
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Percent}" >
                                                                                    </TextBlock>

                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="%" >
                                                                                    </TextBlock>
                                                                                </StackPanel>

                                                                                <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,5,0,0">
                                                                                    <Grid.RenderTransform>
                                                                                        <ScaleTransform ScaleX="1.4" ScaleY="2"/>
                                                                                    </Grid.RenderTransform>
                                                                                    <Border Height="2.5" Width="100" Background="White" CornerRadius="2.5"/>
                                                                                    <Border Height="2.5" Width="{PluginSettings Plugin=SuccessStory, Path=Percent}" Background="{DynamicResource UIBrush}" CornerRadius="2.5" Margin="0" HorizontalAlignment="Left"/>
                                                                                </Grid>
                                                                            </StackPanel>

                                                                            <StackPanel Margin="0,0,0,0" HorizontalAlignment="Right">
                                                                                <TextBlock Style="{DynamicResource EarnedLabel}" Foreground="#FFEBEBEB" HorizontalAlignment="Right">
                                                                                </TextBlock>
                                                                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" >
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked}" HorizontalAlignment="Right">
                                                                                    </TextBlock>

                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="/" HorizontalAlignment="Right">
                                                                                    </TextBlock>

                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Total}" HorizontalAlignment="Right">
                                                                                    </TextBlock>
                                                                                </StackPanel>

                                                                                <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,5,40,10">
                                                                                    <Grid.RenderTransform>
                                                                                        <ScaleTransform ScaleX="1.4" ScaleY="2"/>
                                                                                    </Grid.RenderTransform>
                                                                                    <Border Height="2.5" Width="100" Background="White" CornerRadius="2.5"/>
                                                                                    <Border Height="2.5" Width="{PluginSettings Plugin=SuccessStory, Path=Percent}" Background="{DynamicResource UIBrush}" CornerRadius="2.5" Margin="0" HorizontalAlignment="Left"/>
                                                                                </Grid>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Grid>
                                                                </Grid>

                                                                <!--SIDE BAR HLTB-->
                                                                <Grid Height="10"/>
                                                                <Grid>
                                                                    <Border Background="{DynamicResource MainBackgourndBrush}" CornerRadius="10"/>
                                                                    <Border Name="ColourModifier4" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <Border.Background>
                                                                            <ImageBrush Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                                                        </Border.Background>
                                                                    </Border>
                                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" >
                                                                        <StackPanel x:Name="SideBarHLTB" Margin="10" Tag="{PluginSettings Plugin=HowLongToBeat, Path=HasData}">
                                                                            <StackPanel.Style>
                                                                                <Style>
                                                                                    <Setter Property="Control.Visibility" Value="Visible" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="{x:Null}">
                                                                                            <Setter Property="Control.Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                                                                            <Setter Property="Control.Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </StackPanel.Style>

                                                                            <TextBlock Margin="0,0,0,0" Text="{DynamicResource LOCHowLongToBeatTitle}" 
                                                                   Style="{DynamicResource TextBlockBaseStyle}"/>
                                                                            <StackPanel Orientation="Vertical" Margin="0,10,20,0" VerticalAlignment="Top">
                                                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                                                    <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="{DynamicResource LOCHowLongToBeatMainStory}"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}" />
                                                                                        <TextBlock Text=":"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}"
                                                                                           Margin="0,0,0,10"/>
                                                                                    </StackPanel>
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                       Text="{PluginSettings Plugin=HowLongToBeat, Path=MainStoryFormat}"
                                                                       Margin="20,2,0,0" />
                                                                                </StackPanel>

                                                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                                                    <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="{DynamicResource LOCHowLongToBeatMainExtra}"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}" />
                                                                                        <TextBlock Text=":"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}"
                                                                                           Margin="0,0,0,10"/>
                                                                                    </StackPanel>
                                                                                    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                       Text="{PluginSettings Plugin=HowLongToBeat, Path=MainExtraFormat}"
                                                                       Margin="20,2,0,0" />
                                                                                </StackPanel>

                                                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                                                    <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="{DynamicResource LOCHowLongToBeatCompletionist}"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}" />
                                                                                        <TextBlock Text=":"
                                                                                           Style="{DynamicResource TextBlockBaseStyle}"
                                                                                           Margin="0,0,0,10"/>
