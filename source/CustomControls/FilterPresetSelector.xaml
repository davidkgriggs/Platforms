<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ItemFilterQuickPreset" TargetType="CheckBoxEx">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Tag" Value="{DynamicResource FilterPresetVertical}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBoxEx">
                    <Grid Background="Transparent" Margin="0,0,0,0">
                        <!--PLATFORM BACKGROUNDS-->
                        <TextBlock Name="BackgroundPathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text">
                                        <Setter.Value>
                                            <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                <Binding Source="/FilterPresets/PlatformBackgrounds/"/>
                                                <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                <Binding Source=".jpg"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Grid x:Name="BackgroundBorder" Opacity="0" HorizontalAlignment="Stretch">
                            <Border Background="{DynamicResource ControlBackgroundDarkBrush}" Height="80" CornerRadius="10" VerticalAlignment="Top"/>
                            <Border Background="{DynamicResource MainBackgourndBrush}" CornerRadius="10" VerticalAlignment="Stretch" Margin="0,80,0,0"/>
                            <Border VerticalAlignment="Stretch" CornerRadius="10" Margin="0,80,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=BackgroundPathModifier, Path=Text}"/>
                                </Border.Background>
                            </Border>
                            <Border Background="{DynamicResource OverlayFilterPresets}" CornerRadius="10" VerticalAlignment="Stretch" Margin="0,80,0,0"/>
                        </Grid>

                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                   x:Name="TextContent">
                            <Grid>
                                <StackPanel x:Name="Unfocused" Orientation="Horizontal" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0">
                                    <Grid>
                                        <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                            <Grid.Style>
                                               <Style TargetType="Grid">
                                                   <Setter Property="Visibility" Value="Collapsed"/>
                                                   <Style.Triggers>
                                                       <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                           <Setter Property="Visibility" Value="Visible"/>
                                                       </DataTrigger>
                                                   </Style.Triggers>
                                               </Style>
                                            </Grid.Style>
							                <TextBlock Name="LogoPath" Tag="{Binding Name}" Visibility="Collapsed">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <MultiBinding StringFormat="{}{0}{1}{2}">
                                                                    <Binding Source="../FilterIcons/"/>
                                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                    <Binding Source=".png"/>
                                                                </MultiBinding>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Image Name="LogoImage" MaxWidth="30" MaxHeight="30" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" Source="{Binding ElementName=LogoPath, Path=Text}"/>
                                        </Grid>
							            <Grid x:Name="ThemeModifierPath" Tag="{DynamicResource DKGThemeModifierPath}">
                                            <Grid.Style>
                                               <Style TargetType="Grid">
                                                   <Setter Property="Visibility" Value="Visible"/>
                                                   <Style.Triggers>
                                                       <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                           <Setter Property="Visibility" Value="Collapsed"/>
                                                       </DataTrigger>
                                                   </Style.Triggers>
                                               </Style>
                                            </Grid.Style>
							                <TextBlock Name="LogoPathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                    <Binding ElementName="ThemeModifierPath" Path="Tag" />
                                                                    <Binding Source="/FilterPresets/PlatformLogos/"/>
                                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                    <Binding Source=".png"/>
                                                                </MultiBinding>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Image Name="LogoImageModifier" MaxWidth="100" MaxHeight="50" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" Source="{Binding ElementName=LogoPathModifier, Path=Text}"/>
                                        </Grid>
                                                                    
                                        <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                            <Grid.Style>
                                               <Style TargetType="Grid">
                                                   <Setter Property="Visibility" Value="Collapsed"/>
                                                   <Style.Triggers>
                                                       <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                           <Setter Property="Visibility" Value="Visible"/>
                                                       </DataTrigger>
                                                   </Style.Triggers>
                                               </Style>
                                            </Grid.Style>
                                            <TextBlock FontSize="25" Foreground="White" Margin="7.5,0,0,0"
                                                       HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Setter Property="Text" Value="{Binding Name}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=LogoImageModifier, Path=ActualHeight}" Value="0">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True">
                                                                <Setter Property="Text" Value="&#59633;"/>
                                                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                        
                                        <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                            <Grid.Style>
                                               <Style TargetType="Grid">
                                                   <Setter Property="Visibility" Value="Visible"/>
                                                   <Style.Triggers>
                                                       <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                           <Setter Property="Visibility" Value="Collapsed"/>
                                                       </DataTrigger>
                                                   </Style.Triggers>
                                               </Style>
                                            </Grid.Style>
                                            <TextBlock FontSize="30" Foreground="White" Margin="7.5,0,0,0" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Setter Property="Text" Value="{Binding Name}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=LogoImageModifier, Path=ActualHeight}" Value="0">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </TextBlock>

                        <Grid x:Name="InfoMedia" HorizontalAlignment="Right" Visibility="Collapsed"
                              Margin="0,0,0,0" Width="1000">

                            <TextBlock Name="ColourPathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                    <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                    <Binding Source="/FilterPresets/PlatformColours/"/>
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source=".png"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border Background="{DynamicResource MainBackgourndBrush}" Width="1000" Height="80" CornerRadius="10" VerticalAlignment="Top"/>
                            <Border Width="1000" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="{DynamicResource DKGThemeModifierPath}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="CornerRadius" Value="10"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20"/>
                                </Border.Effect>
                                <Border.Background>
                                    <ImageBrush x:Name="ColourModifier" ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"
                                                Stretch="Fill" RenderOptions.BitmapScalingMode="Fant"/>
                                </Border.Background>
                            </Border>
                            <Grid>
                                <Grid Background="Transparent" Width="480" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,209,0,0">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Height" Value="272"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=VideoSource, Path=ActualWidth}" Value="0">
                                                    <Setter Property="Height" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Border Background="Black">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Height" Value="272"/>
                                                <Setter Property="Width" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=VideoSource, Path=ActualWidth}" Value="480">
                                                        <Setter Property="Width" Value="480"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <TextBlock Name="VideoPath" Tag="{Binding Name}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                            <Binding ElementName="ThemeModifierPath" Path="Tag" />
                                                            <Binding Source="/FilterPresets/PlatformTrailers/"/>
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source=".mp4"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSource" Stretch="Uniform" Height="272">
                                        <MediaElement.Style>
                                            <Style TargetType="MediaElement">
                                                <Setter Property="Volume" Value="0"/>
                                                <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPath, Path=Text}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MediaElement.Style>
                                    </MediaElement>
                                </Grid>

                                <Grid x:Name="ThemeModifierImagePath" Tag="{DynamicResource DKGThemeModifierPath}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="20"/>
                                    </Grid.Effect>
                                    <TextBlock Name="ImagePathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                            <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                            <Binding Source="/FilterPresets/PlatformImages/"/>
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source=".png"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Image Name="ImageModifier" Width="900" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Margin="0,85,0,0"
                                                   VerticalAlignment="Top" HorizontalAlignment="Center" Source="{Binding ElementName=ImagePathModifier, Path=Text}"/>
                                </Grid>
                            </Grid>
                        </Grid>

                        <DockPanel x:Name="InfoDetails" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,80,0,0" Visibility="Collapsed">
                            <!--FOCUS ICON-->
                            <Grid Margin="0,-80,0,0" HorizontalAlignment="Left" DockPanel.Dock="Top">
                                <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image Name="LogoImage1" MaxWidth="125" MaxHeight="62.5" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" Source="{Binding ElementName=LogoPath, Path=Text}"/>
                                </Grid>
                                <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image Name="LogoImageModifier1" MaxWidth="125" MaxHeight="62.5" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" Source="{Binding ElementName=LogoPathModifier, Path=Text}"/>
                                </Grid>

                                <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <TextBlock FontSize="45" Foreground="White" Margin="7.5,0,0,0" 
                                                       HorizontalAlignment="Left" VerticalAlignment="Center" Width="800" TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Text" Value="{Binding Name}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=LogoImageModifier, Path=ActualHeight}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Tag="{DynamicResource DKGThemeModifierPath}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value=".">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <TextBlock FontSize="45" Foreground="White" Margin="7.5,0,0,0" 
                                                       HorizontalAlignment="Left" VerticalAlignment="Center" Width="800" TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Text" Value="{Binding Name}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=LogoImageModifier, Path=ActualHeight}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                            
                            <Grid DockPanel.Dock="Top" HorizontalAlignment="Left"
                              Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="52"
                                           Width="900" TextTrimming="CharacterEllipsis">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="10"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <!--TextBlock Text="{Binding ElementName=VideoSource, Path=ActualWidth}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="42" Foreground="{DynamicResource ControlBackgroundDarkBrush}"
                                           Width="500" Height="75" TextTrimming="CharacterEllipsis"/-->                                    
                                </StackPanel>
                            </Grid>

                            <!--PLATFORM LOGOS-->
                            <TextBlock Name="PlatformScreenshotPathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                    <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                    <Binding Source="/FilterPresets/PlatformScreenshots/"/>
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source=".jpg"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Name="PlatformLogoPathModifier" Tag="{Binding Name}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                    <Binding ElementName="ThemeModifierImagePath" Path="Tag" />
                                                    <Binding Source="/FilterPresets/PlatformLogos/"/>
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source=".png"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Grid DockPanel.Dock="Top" HorizontalAlignment="Left" Width="300" Margin="0,10,0,10">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Height" Value="300"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=PlatformScreenshot, Path=ActualWidth}" Value="0">
                                                <Setter Property="Height" Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Image x:Name="PlatformScreenshot" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="Fant" Height="300"
                                       Source="{Binding ElementName=PlatformScreenshotPathModifier, Path=Text}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.8"/>
                                <Grid>
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="10"/>
                                    </Grid.Effect>
                                    <Image Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" MaxWidth="250"
                                       Source="{Binding ElementName=PlatformLogoPathModifier, Path=Text}"/>
                                </Grid>
                                <Border  BorderBrush="#4DFFFFFF" BorderThickness="2" Opacity="0.8" Height="300" Width="300"/>
                            </Grid>
                            

                            <Grid x:Name="InfoBox" DockPanel.Dock="Top" HorizontalAlignment="Left"
                                  Margin="0,0,0,10" Width="800">
                                <Grid Width="165" HorizontalAlignment="Left">
                                    <Border Background="{DynamicResource ControlBackgroundDarkBrush}" CornerRadius="10"/>
                                    <Border CornerRadius="10">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding ElementName=ColourPathModifier, Path=Text}"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                        <TextBlock Text="{DynamicResource LOCSelect}" Style="{DynamicResource TextBlockBaseStyle}" 
                                                       FontFamily="Segoe UI Semibold" VerticalAlignment="Center"/>
                                        <ContentControl ContentTemplate="{DynamicResource ButtonPromptA}" Height="40" Focusable="False"
                                                                Foreground="#FFEBEBEB" VerticalAlignment="Center" Margin="15,20,0,20"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DockPanel>

                        <Grid x:Name="Arrow" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,100"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:1.8" Duration="0:0:0.2"/>
                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,100" To="0,0,0,0" Duration="0:0:1.8"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <StackPanel>
                                <TextBlock 	Foreground="#FFEBEBEB"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"                           
									Text="&#xea5b;" FontFamily="{StaticResource FontIcoFont}" FontSize="72" 
                                    x:Name="Arrow1"/>
                            </StackPanel>                            
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ListBox.AlternationIndex" Value="0">
                            <Setter Property="Focusable" Value="True"/>
                        </Trigger>
                        
                        <Trigger Property="IsFocused" Value="False">
                            <Setter Property="MediaElement.Source" TargetName="VideoSource" Value="" />
                        </Trigger>
                        
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="FontWeight" Value="Bold" TargetName="TextContent" />
                            <Setter Property="FontSize" Value="{DynamicResource FilterFontLarge}"/>
                        </Trigger>

                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="FontWeight" Value="Bold" TargetName="TextContent" />
                            <Setter Property="FontSize" Value="{DynamicResource FilterFontLarge}"/>
                            <Setter Property="Opacity" TargetName="BackgroundBorder" Value="1"/>
                            <Setter Property="Visibility" TargetName="InfoDetails" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="InfoMedia" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="Arrow" Value="Visible"/>
                            <!--Setter Property="Height" Value="600"/-->
                            <Setter Property="Width" Value="{DynamicResource FilterWidth}"/>                            
                        </Trigger>

                        <DataTrigger Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True">
                            <Setter Property="Margin" TargetName="Unfocused" Value="-1000,10,0,0"/>
                            <Setter Property="Focusable" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="DropDown">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="MaxHeight" From="65" To="965" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="False">
                            <DataTrigger.EnterActions>
                                <RemoveStoryboard BeginStoryboardName="DropDown"/>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="FontWeight" Value="Bold" TargetName="TextContent" />
                            <Setter Property="FontSize" Value="{DynamicResource FilterFontLarge}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type FilterPresetSelector}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Margin" Value="120,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type FilterPresetSelector}">
                    <ItemsControlEx x:Name="PART_ItemsFilterPresets" Focusable="False" AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
